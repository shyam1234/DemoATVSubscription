<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="data"
            type="com.willow.android.tv.data.repositories.pointtable.datamodel.TeamStanding" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dimen_5dp"
        android:paddingHorizontal="@dimen/dimen_10dp">

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{data.team.name}"
            android:layout_weight="2.5"
            android:gravity="start"/>

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{String.valueOf(data.played)}" />

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{String.valueOf(data.win)}" />

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{String.valueOf(data.loss)}" />

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{String.valueOf(data.draw)}" />

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{String.valueOf(data.no_result)}" />

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{String.valueOf(data.net_run_rate)}" />

        <TextView
            style="@style/PointTableItemTextView"
            android:text="@{String.valueOf(data.points)}" />

    </LinearLayout>
</layout>