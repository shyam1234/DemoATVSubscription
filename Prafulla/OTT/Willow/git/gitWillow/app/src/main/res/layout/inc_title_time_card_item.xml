<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/text_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/card_item_common_start_padding"
        android:layout_marginEnd="@dimen/card_item_common_start_padding"
        android:layout_marginBottom="@dimen/card_item_common_bottom_margin">

        <ImageView
            android:id="@+id/imageview_live_tag"
            android:layout_width="29dp"
            android:layout_height="10dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/live_tag"
            android:scaleType="fitStart"
            android:visibility="gone"
            android:layout_above="@id/sub_title" />

        <TextView
            android:id="@+id/sub_title"
            style="@style/TvFontFamilyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/title"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/dimen_8sp"
            android:textStyle="normal"
            tools:text="This is title" />

        <TextView
            android:id="@+id/title"
            style="@style/TvFontFamilyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/time"
            android:ellipsize="end"
            android:gravity="start"
            android:letterSpacing="0.02"
            android:maxLines="2"
            android:singleLine="false"
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="normal"
            tools:text="This is working title" />

        <TextView
            android:id="@+id/time"
            style="@style/TvFontFamilyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:singleLine="false"
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="normal"
            tools:text="Time" />
    </RelativeLayout>
</merge>