<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.willow.android.tv.ui.subscription.model.SubscriptionChangePlan" />
    </data>

    <LinearLayout    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:id="@+id/planChangeLyt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plan1"
            style="@style/sub_plan_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.plan1}"
            app:drawableStartCompat="@drawable/ic_blue_checkcircle" />

        <TextView
            android:id="@+id/plan2"
            style="@style/sub_plan_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.plan2}"
            app:drawableStartCompat="@drawable/ic_blue_checkcircle" />

        <TextView
            android:id="@+id/plan3"
            style="@style/sub_plan_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.plan3}"
            app:drawableStartCompat="@drawable/ic_blue_checkcircle" />

        <TextView
            android:id="@+id/plan4"
            style="@style/sub_plan_change_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.plan4}"
            app:drawableStartCompat="@drawable/ic_blue_checkcircle" />

        <LinearLayout
            style="@style/BtnAppearance"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/planType"
                style="@style/sub_plan_change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.planDuaration}" />

            <TextView
                android:id="@+id/planMoney"
                style="@style/sub_plan_change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.planAmt}" />

        </LinearLayout>
    </LinearLayout>
</layout>
