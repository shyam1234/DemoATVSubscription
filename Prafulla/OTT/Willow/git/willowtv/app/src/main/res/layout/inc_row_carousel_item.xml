<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/ll_carousel_top_data_holder"
        android:layout_width="@dimen/dimen_carousel_text_holder_width"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_fragment_main_padding_left"
        android:layout_marginTop="@dimen/dimen_carousel_text_holder_margin_top"
        android:gravity="start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_prime_Tag"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="fitStart"
            android:src="@drawable/prime_tag"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageview_live_tag"
            android:layout_width="44dp"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/live_tag"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textview_event"
            style="@style/TvFontFamilyStyle"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:background="@color/orange"
            android:gravity="center_vertical"
            android:paddingHorizontal="4dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="8sp"
            tools:text="tonight" />

        <TextView
            android:id="@+id/textview_carousel_title"
            style="@style/TvFontFamilyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:letterSpacing="0.02"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal"
            tools:text="India 194/2 (30.0) \nvs\nBangladesh 144/4* (28.3)" />

        <TextView
            android:id="@+id/textview_carousel_subtitle"
            style="@style/TvFontFamilyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carousel_btn_margin_top"
            android:ellipsize="end"
            android:letterSpacing="0.02"
            android:maxLines="2"
            android:singleLine="true"
            android:textColor="@color/hero_banner_subtitle_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="1st T20" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/chip_group_carousel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carousel_btn_margin_top"
            android:focusable="false"
            android:orientation="horizontal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textview_stadium"
            style="@style/TvFontFamilyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carousel_btn_margin_top"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:letterSpacing="0.02"
            android:maxLines="1"
            android:paddingVertical="2dp"
            android:singleLine="true"
            android:textColor="#CACECE"
            android:textSize="@dimen/dimen_11sp"
            android:textStyle="normal"
            android:visibility="visible"
            app:drawableLeftCompat="@drawable/ic_stadium"
            tools:text="Sydney Cricket Ground, Sydney" />

        <TextView
            android:id="@+id/textview_carousel_content"
            style="@style/TvFontFamilyStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carousel_btn_margin_top"
            android:ellipsize="end"
            android:letterSpacing="0.02"
            android:maxLines="3"
            android:textColor="#CACECE"
            android:textSize="11sp"
            android:textStyle="normal"
            android:visibility="visible"
            tools:text="India vs Bangladesh, 2nd Test:\nIndia claw back with R Ashwin, Shreyas Iyer to complete series sweep" />

        <LinearLayout
            android:id="@+id/ll_carousel_progress_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/carousel_btn_margin_top"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:focusable="false"
                android:indeterminate="false"
                android:progressTint="#E5E6E6"
                tools:progress="50" />

            <TextView
                android:id="@+id/progressbar_time_remaining"
                style="@style/TvFontFamilyStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:visibility="visible"
                tools:text="1 hour and 32 minutes remaining" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_carousel_watch"
        style="@style/TvFontFamilyStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carousel_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_fragment_main_padding_left"
        android:layout_marginTop="@dimen/carousel_btn_margin_top"
        android:layout_marginBottom="@dimen/carousel_button_margin_bottom"
        android:background="@color/carousel_btn_default_color"
        android:drawableLeft="@drawable/play_btn"
        android:drawablePadding="@dimen/carousel_btn_drawable_padding"
        android:minWidth="@dimen/carousel_btn_min_width"
        android:nextFocusRight="@id/button_carousel_watch"
        android:nextFocusUp="@id/button_carousel_watch"
        android:paddingStart="@dimen/carousel_btn_padding_start"
        android:paddingEnd="@dimen/carousel_btn_padding_start"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="normal"
        tools:text="Watch" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_to_handle_focus"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carousel_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_fragment_main_padding_left"
        android:layout_marginTop="@dimen/carousel_btn_margin_top"
        android:layout_marginBottom="120dp"
        android:background="@color/transparent"
        android:nextFocusRight="@id/button_to_handle_focus"
        android:nextFocusUp="@id/button_to_handle_focus" />


</RelativeLayout>