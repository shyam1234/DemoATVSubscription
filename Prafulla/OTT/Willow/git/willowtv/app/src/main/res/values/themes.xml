<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/window_bg_color</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textColorPrimary">@color/default_text_color</item>
        <item name="android:textColorSecondary">@color/default_text_color_secondary</item>
        <!--
        use MaterialComponents theme as parent to resolve the chip theme compatibility issue
        and for leanback, add theme below
        -->
        <item name="theme">@style/CustomLeanback</item>
    </style>

    <style name="CustomLeanback" parent="@style/Theme.AppCompat.Leanback">
        <item name="browseRowsFadingEdgeLength">0dp</item>
        <item name="browsePaddingStart">@dimen/dimen_fragment_main_padding_left</item>
    </style>
    <style name="Theme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PointTableItemTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PointTableHeaderItemTextView" parent="PointTableItemTextView">
        <item name="android:textSize">@dimen/dimen_10sp</item>
    </style>

    <!--for mobile-->
    <!-- Base application theme. -->
    <style name="Theme.Willow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_title</item>
        <item name="colorPrimaryVariant">@color/blue_title</item>
        <item name="colorOnPrimary">@color/blue_title</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_blue</item>
        <item name="colorSecondaryVariant">@color/button_blue</item>
        <item name="colorOnSecondary">@color/button_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Willow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Willow.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Willow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--end of mobile-->
</resources>