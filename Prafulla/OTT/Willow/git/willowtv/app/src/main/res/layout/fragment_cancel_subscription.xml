<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg_color"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/logoWillow"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/willow_logo_in_open_state"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="Roboto-Regular"
        android:text="@string/cancel_your_subscription"
        android:textSize="@dimen/textSize_login_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoWillow" />

    <TextView
        android:id="@+id/txtLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:text="@string/scan_the_qr_code_with_your_mobile"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_first" />

    <ImageView
        android:id="@+id/imgDivider"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/img_divider"
        app:layout_constraintBottom_toBottomOf="@+id/iVSubscriptionQrCode"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@+id/txtLoginTitle" />

    <ImageView
        android:id="@+id/iVSubscriptionQrCode"
        android:layout_width="@dimen/qr_code_size"
        android:layout_height="@dimen/qr_code_size"
        android:padding="@dimen/dimen_20dp"
        android:src="@drawable/qr_code_dummy"
        app:layout_constraintEnd_toEndOf="@+id/txtLoginTitle"
        app:layout_constraintStart_toStartOf="@id/txtLoginTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtLoginTitle" />

    <TextView
        android:id="@+id/txtLoginWithTVDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/imgDivider"
        tools:text="Go to\nhttps://www.willow.tv/cancel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>