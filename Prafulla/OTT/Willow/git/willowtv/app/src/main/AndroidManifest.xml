<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.willow.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-feature android:name="android.software.leanback"
        android:required="false" />

    <application
        android:hardwareAccelerated="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name=".WillowApplication"
        android:allowBackup="true"
        android:banner="@drawable/app_banner"
        android:icon="@drawable/app_banner"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        tools:replace="icon"
        android:theme="@style/Theme.AppTheme">

        <activity
            android:name=".tv.ui.splash.SplashActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tv.ui.main.MainActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:exported="false" />
        <activity
            android:name=".tv.ui.login.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:theme="@style/Theme.AppTheme.NoActionBar"
            android:exported="false" >
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name=".tv.ui.login.TVEActivity"
            android:configChanges="keyboard|keyboardHidden|navigation"
            android:exported="false" />

        <activity
            android:name=".tv.ui.playback.PlaybackActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:exported="false" />

       <meta-data
            android:name="BITMOVIN_PLAYER_LICENSE_KEY"
            android:value="@string/PLAYER_LICENSE_KEY" />
        <meta-data
            android:name="BITMOVIN_ANALYTICS_LICENSE_KEY"
            android:value="@string/ANALYTICS_LICENSE_KEY" />

      <!--
      For supporting the work-manger
      <provider
            android:name="androidx.work.impl.WorkManagerInitializer"
            android:authorities="${applicationId}.workmanager-init"
            tools:node="remove" />
            -->

        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <!-- ===============for mobile =========================== -->

        <activity
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:name=".mobile.views.pages.homeLoadingPage.HomeLoadingActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <!-- For Deep Linking -->
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="willow.page.link" android:scheme="https"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".mobile.views.pages.onboardingPage.OnboardingActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:theme="@style/SplashTheme" />

        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.forgotPasswordPage.ForgotPasswordPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.tVELoginPage.TVELoginPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.videoDetailPage.VideoDetailPageActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true" />
        <activity
            android:name=".mobile.views.popup.loginPopup.LoginPopupActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:theme="@style/DialogTheme" />
        <activity
            android:name=".mobile.views.popup.filterPopup.FilterPopupActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
        <activity
            android:name=".mobile.views.popup.messagePopup.MessagePopupActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:theme="@style/DialogTheme" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.preferencesPage.PreferencesPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.profilePage.ProfilePageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.othersPage.OthersPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.iAPPage.IAPPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.WebViewPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.commentaryPage.CommentaryPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.scorecardPage.ScorecardPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.loginPage.LoginPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.views.pages.matchCenterPage.MatchCenterPageActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" />
        <activity
            android:theme="@style/Theme.Willow"
            android:name=".mobile.MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true" >
        </activity>
        <activity android:name=".tv.ui.subscription.SubscriptionActivity" />
        <activity android:name=".tv.ui.videospage.FavTeamPageActivity" />

        <meta-data
            android:name="google_analytics_automatic_screen_reporting_enabled"
            android:value="true" />
        <meta-data
            android:name="CLEVERTAP_ACCOUNT_ID"
            android:value="8RK-994-4K5Z" />
        <meta-data
            android:name="CLEVERTAP_TOKEN"
            android:value="4cc-32b" />
        <meta-data
            android:name="CLEVERTAP_USE_GOOGLE_AD_ID"
            android:value="1" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.google.android.exoplayer2.ext.cast.DefaultCastOptionsProvider" />

        <receiver android:name=".mobile.services.LocalNotificationAlarmReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- ================== end of mobile ============================= -->
    </application>

</manifest>