<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="296dp"
    android:layout_height="171dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/video_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:background="@drawable/gradient_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/card_video_big_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/design_default_color_surface"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_video_duration_bg"
            app:layout_constraintEnd_toStartOf="@+id/ic_share"
            app:layout_constraintStart_toEndOf="@+id/ic_video_duration_bg"
            app:layout_constraintTop_toTopOf="@+id/ic_video_duration_bg" />

        <ImageView
            android:id="@+id/ic_premium"
            android:layout_width="43dp"
            android:layout_height="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/premium" />

        <ImageView
            android:id="@+id/ic_video_play"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/play" />

        <ImageView
            android:id="@+id/ic_video_duration_bg"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_video_duration_bg" />

        <ImageView
            android:id="@+id/ic_share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/share" />

        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textColor="@color/design_default_color_surface"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_video_duration_bg"
            app:layout_constraintEnd_toEndOf="@+id/ic_video_duration_bg"
            app:layout_constraintStart_toStartOf="@+id/ic_video_duration_bg"
            app:layout_constraintTop_toTopOf="@+id/ic_video_duration_bg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>