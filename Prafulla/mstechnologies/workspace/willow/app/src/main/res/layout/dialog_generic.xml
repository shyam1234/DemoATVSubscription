<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.willow.android.tv.common.genericDialogBox.GenericDialogModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_bg_color"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.titleText}"
            android:textColor="@color/white"
            tools:text="@string/logout_title"
            android:padding="@dimen/dimen_20dp"
            android:textSize="@dimen/gereicDialog_title_text_size"
            style="@style/TvFontFamilyStyle"/>

        <TextView
            android:id="@+id/tvDiscription"
            android:layout_width="wrap_content"
            tools:text="@string/logout_disc"
            android:layout_height="wrap_content"
            android:text="@{model.descriptionText}"
            android:textColor="@color/neutral_grey_B5B5B5"
            android:textSize="@dimen/gereicDialog_disc_text_size"
            style="@style/TvFontFamilyStyle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonPositive"
                style="@style/BtnAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                tools:text="@string/cancel"
                android:focusable="true"
                android:text="@{model.positveButtonText}" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNegative"
                style="@style/BtnAppearance"
                tools:text="@string/back_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.negativeButtonText}" />
        </LinearLayout>

    </LinearLayout>
</layout>
