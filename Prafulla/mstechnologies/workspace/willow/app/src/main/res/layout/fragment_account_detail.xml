<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="model"
            type="com.willow.android.tv.ui.accountDetails.model.AccountDetailsModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/shift_fragment_right"
        android:background="@color/window_bg_color">

        <ImageView
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_signin_signup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/start_gradient_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/account_details_text_margin"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_detail"
                android:textColor="@color/neutral_grey"
                android:textSize="@dimen/account_details_title_text_size"
                android:textStyle="bold"
                android:visibility="visible"
                style="@style/TvFontFamilyStyle"/>

            <TextView
                android:text="@string/name"
                android:id="@+id/nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textColor="@color/neutral_grey_BDC2C2"
                android:textSize="@dimen/account_details_data_text_size"
                android:visibility="@{model.isUserLogin==true? View.VISIBLE : View.GONE }"
                style="@style/TvFontFamilyStyle"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.tvuser?model.subscriptionDetails:model.fullName}"
                android:textColor="@color/neutral_grey"
                android:textSize="@dimen/account_details_data_text_size"
                android:visibility="@{model.isUserLogin==true? View.VISIBLE : View.GONE}"
                style="@style/TvFontFamilyStyle"/>

            <TextView
                android:id="@+id/emailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="@string/email_id"
                android:textColor="@color/neutral_grey_BDC2C2"
                android:textSize="@dimen/account_details_data_text_size"
                android:visibility="@{model.isUserLogin==true? (model.emailID.empty != true ? View.VISIBLE : View.GONE ) : View.GONE}"
                style="@style/TvFontFamilyStyle"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.emailID}"
                android:textColor="@color/neutral_grey"
                android:textSize="@dimen/account_details_data_text_size"
                android:visibility="@{model.isUserLogin==true? (model.emailID.empty != true? View.VISIBLE : View.GONE ) : View.GONE}"
                style="@style/TvFontFamilyStyle"/>

            <TextView
                android:id="@+id/subscriptionDetailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="@{model.tvuser?@string/tveUser_id:@string/subscription_details}"
                android:textColor="@color/neutral_grey_BDC2C2"
                android:textSize="@dimen/account_details_data_text_size"
                android:visibility="@{model.isUserLogin==true? View.VISIBLE : View.GONE}"
                style="@style/TvFontFamilyStyle"/>

            <TextView
                android:id="@+id/tvSubscriptionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.tvuser?model.tvuserId:model.subscriptionDetails}"
                android:textColor="@color/neutral_grey"
                android:textSize="@dimen/account_details_data_text_size"
                android:visibility="@{model.isUserLogin==true? View.VISIBLE : View.GONE }"
                style="@style/TvFontFamilyStyle"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonLogOut"
                    style="@style/BtnAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nextFocusForward="@id/buttonCancelSubscription"
                    android:nextFocusRight="@id/buttonCancelSubscription"
                    android:nextFocusUp="@id/buttonCancelSubscription"
                    android:layout_margin="@dimen/dimen_0dp"
                    android:text="@{model.isUserLogin==true?@string/logout:@string/login}" />

                <View
                    android:layout_width="@dimen/dimen_20dp"
                    android:layout_height="@dimen/dimen_20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCancelSubscription"
                    style="@style/BtnAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_0dp"
                    android:layout_marginStart="@dimen/text_size_25sp"
                    android:nextFocusLeft="@id/buttonLogOut"
                    android:nextFocusRight="@id/buttonLogOut"
                    android:nextFocusUp="@id/buttonLogOut"
                    android:nextFocusDown="@id/buttonLogOut"
                    android:nextFocusForward="@id/buttonLogOut"
                    android:visibility="gone"
                    android:text="@{model.subscriptionStatus==true?@string/cancel_subscriptions:@string/subscriptions}" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>